publisher = {Elsevier},
title = {{Empirical estimates of the radiative impact of an unusually extreme dust and wildfire episode on the performance of a photovoltaic plant in Western Mediterranean}},
url = {https://www.sciencedirect.com/science/article/pii/S0306261918317586},
volume = {235},
