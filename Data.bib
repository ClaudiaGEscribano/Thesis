isbn = {1364-0321},
issn = {13640321},
keywords = {Euro-Cordex,Europe,Solar photovoltaic power,Spatial distribution of renewable energy,Wind power,plants},
mendeley-groups = {Articulo2,Tesis/Results/aod},
title = {{The CLIMIX model: A tool to create and evaluate spatially-resolved scenarios of photovoltaic and wind power development}},
year = {2015}
}

@article{Jerez2013,
