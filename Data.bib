journal = {Atmospheric Chemistry and Physics Discussions},
keywords = {{\#}Bais},
mendeley-groups = {Articulo2,mybib,Tesis/Results/aod},
pages = {13391--13451},
title = {{Impact of the 4 April 2014 Saharan dust outbreak on the photovoltaic power generation in Germany}},
url = {http://www.atmos-chem-phys-discuss.net/acp-2017-441/},
