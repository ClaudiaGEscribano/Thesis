isbn = {1748-9326},
issn = {17489326},
journal = {Environmental Research Letters},
keywords = {East Atlantic,Iberian Peninsula,North Atlantic Oscillation,Scandinavian pattern,solar power,wind power},
mendeley-groups = {Articulo1,Tesis/Results/longterm},
number = {4},
pages = {044035},
title = {{Time-scale and extent at which large-scale circulation modes determine the wind and solar potential in the Iberian Peninsula}},
url = {http://stacks.iop.org/1748-9326/8/i=4/a=044035?key=crossref.bd78f653acd03b2f65bd9245c21f41f2},
