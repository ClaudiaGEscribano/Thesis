journal = {Journal of Applied Meteorology and Climatology},
mendeley-groups = {Articulo1,Tesis/Results/longterm},
number = {10},
pages = {2204--2225},
title = {{The impact of the north atlantic oscillation on renewable energy resources in Southwestern Europe}},
