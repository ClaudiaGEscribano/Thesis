keywords = {Long-term trends/shortwave radiation budget/surfac,cycle/sunshine duration/earths surface/atmospheric,radiation/black carbon aerosols/climate-change/hyd,transmission/anthropogenic aerosols},
mendeley-groups = {Variability long-term},
number = {D10},
publisher = {Wiley Online Library},
title = {{Global dimming and brightening: A review - art. no. D00D16}},
volume = 114,
