journal = {Solar Energy},
keywords = {DNI,Direct and global irradiance,Interannual,Solar resource,Validation,Variability},
mendeley-groups = {combined/PartI.Data sources/Interesting. Solar/bases de datos,Articulo1,combined/PartI.Data sources/Interesting. Solar,Variability long-term,Tesis/Results/longterm},
number = {5},
