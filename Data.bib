issn = {09601481},
journal = {Renewable Energy},
keywords = {National Renewable Energy Action Plans,Renewable energies,Solar energy,Wind energy},
pmid = {70583469},
title = {{Assessing complementarity of wind and solar resources for energy production in Italy. A Monte Carlo approach}},
year = {2014}
}

