issn = {0038-092X},
journal = {Solar Energy},
month = {jun},
pages = {61--75},
publisher = {Pergamon},
title = {{Consequences of neglecting the interannual variability of the solar resource: A case study of photovoltaic power among the Hawaiian Islands}},
url = {https://www.sciencedirect.com/science/article/pii/S0038092X18303414},
volume = {167},
year = {2018}
}

@article{CalinskiH,
