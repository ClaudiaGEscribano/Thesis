journal = {Climate Dynamics},
keywords = {Atmospheric absorption,CMIP5 global climate model,Cloudiness,EURO-CORDEX regional climate model,Surface solar radiation},
mendeley-groups = {mybib},
title = {{Projected changes in surface solar radiation in CMIP5 global climate models and in EURO-CORDEX regional climate models for Europe}},
